<footer
	id="footer"
	class="full-width section bg-darkest clr-white"
	style="--section-padding: var(--space-xl)"
>
	<div class="flex-group">
		<p>Copyright Â© 2023. All rights are reserved</p>
		<div class="[ footer__social-links ] [ flex-group fs-300 ]" style="--flex-column-gap: var(--space-xs);">
			<a href="https://www.linkedin.com/in/ivanrodrigues92/" target="_blank">
				<!-- <span>Linkedin</span> -->
				<div class="btn bg-lightest">
					<Icon
						name="linkedin"
						class="[ linkedin-icon ] [ svg-icon clr-darkest ]"
					/>
				</div>
			</a>
			<a href="https://github.com/Ivanho92" target="_blank">
				<!-- <span>Github</span> -->
				<div class="btn bg-lightest">
					<Icon
						name="github"
						class="[ github-icon ] [ svg-icon clr-darkest ]"
					/>
				</div>
			</a>
		</div>
	</div>
</footer>

<style lang="scss">
	@use "@styles/abstracts" as *;

	footer {
		> div {
			--flex-align: center;
			--flex-justify: center;
			--flex-column-gap: var(--space-xxl);
			
			@media (width > $breakpoint-small) {
				--flex-justify: space-between;
			}
		}
	}

	.footer__social-links {
		& a { line-height: 1 }
	}

	.btn {
		--border-radius: 7.5px;
		--btn-responsive-width: fit-content;

		padding: 0.5em;
		overflow: hidden;

		&:hover {
			background-color: var(--clr-light);
		}
	}

	.linkedin-icon {
		transform: scale(1.3);
	}

	.github-icon {
		bottom: -6px;
		transform: scale(1.6);
		top: auto;
	}
</style>
